<% if(admin.cafe!='admin'){ %>
    <script>
        location.assign(`/admin/song/<%= admin.cafe%>`);
    </script>
    <% } %>
<!-- Panel Start -->
<section class="home">
    <div class="container my-auto">
        <div class="row">
            <div class="col-10 home-form">
                <div class="form-text">
                    <p>
                        Kafe Ekle
                    </p>
                </div>
                <form action="/admin/cafes" method="post">
                    <div class="form-row">
                        <div class="form-group mb-4">
                            <label for="title">Kafe Adı</label>
                            <input type="text" name="name" class="form-input form-control form-control-lg" id="title"
                                placeholder="Kafenin Adı">
                        </div>
                        <div class="form-group mb-4">
                            <label for="title">Kafe Adresi</label>
                            <input type="text" name="address" class="form-input form-control form-control-lg"
                                id="title" placeholder="Kafenin Adresi">
                        </div>
                        <div class="form-group mb-4">
                            <label for="title">Otomatik Oynatma</label>
                            <select name="autoPlay" class="form-select form-control form-control-lg" id="title">
                                <option value="0" selected>Olsun</option>
                                <option value="1">Olmasın</option>
                            </select>
                        </div>
                        <div class="form-group mb-4">
                            <label for="title">Masa Sayıs</label>
                            <input type="number" name="amount" class="form-input form-control form-control-lg" id="title"
                                placeholder="Masa Sayısı">
                        </div>

                    </div>
                    <button type="submit" value="cafeAdd" name="cafeAdd"
                        class="form-btn mt-2 btn btn-lg btn-outline-primary">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Panel End -->